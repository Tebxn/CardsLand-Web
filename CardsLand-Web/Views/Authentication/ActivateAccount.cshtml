@model CardsLand_Web.Entities.UserEnt


<body>

    <!-- Log In page -->
    <div class="container-fluid ">
        <div class="row align-items-center" style="background-image: url('/template/img/pokemon-hd.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;  margin-top: 0; height: 80vh;">
            <div class="col-3 mx-auto mt-5 mb-5 my-0">
                <div class="auth-page">
                    <div class="card auth-card shadow-lg mx-auto" style="background-color: rgba(255, 255, 255, 0.6); max-width: 550px;">
                        <div class="card-body" style="">

                            <div class="px-3">
                                <div class="auth-logo-box text-center">
                                    <img src="/template/img/raichu.png" alt="Logo" width="150" height="auto" class="mx-auto d-block">
                                </div><!--end auth-logo-box-->

                                <div class="text-center auth-logo-text">
                                    <h4 class="mt-0 mb-3 mt-5">Ven ¡vamos a capturarlos a todos!</h4>
                                    <p class="text-muted mb-0">Ingresa el código enviado para activar tu cuenta</p>
                                </div> <!--end auth-logo-text-->


                                <form asp-action="ActivateAccount" asp-controller="Authentication" method="post" class="form-horizontal m-t-30">

                                    <div class="form-group">
                                        <input asp-for="SecuredId" class="form-control" type="hidden" />
                                    </div><!--end form-group-->
                                    <br />
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="auth-form-icon">
                                                <i class="dripicons-mail"></i>
                                            </span>
                                            <input type="text" class="form-control" id="User_Activation_Code" name="User_Activation_Code" placeholder="Digite el código">
                                        </div>
                                    </div><!--end form-group-->


                                    <div class="form-group mb-0 row">
                                        <div class="col-12 mt-2">
                                            <button class="btn btn-gradient-primary btn-round btn-block waves-effect waves-light" type="submit">Activar Cuenta <i class="fas fa-sign-in-alt ml-1"></i></button>
                                        </div><!--end col-->
                                    </div> <!--end form-group-->
                                </form><!--end form-->
                            </div><!--end /div-->


                        </div><!--end /div-->

                           
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end auth-page-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-fluid-->
    <!-- End Log In page -->
</body>